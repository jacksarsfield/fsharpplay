<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ViewModels;assembly=TradeStats.App"
        Title="F# Chart Example"
        Width="525"
        Height="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBlock Margin="5"
                       VerticalAlignment="Center"
                       Text="Start:" />
            <DatePicker Width="130" SelectedDate="{Binding StartDate}" />
            <TextBlock Margin="5"
                       VerticalAlignment="Center"
                       Text="End:" />
            <DatePicker Width="130" SelectedDate="{Binding EndDate}" />
        </StackPanel>
        <ContentControl x:Name="ChartHost"
                        Grid.Row="1"
                        Margin="5" />
        <Button Grid.Row="2"
                Margin="5"
                Command="{Binding OkCommand}"
                Content="Chart"
                FontSize="16" />
    </Grid>
</Window>